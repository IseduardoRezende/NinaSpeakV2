@using NinaSpeakV2.Domain.ViewModels.Institutions
@model ReadInstitutionViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1 class="text-center text-danger">Deletar Instituição</h1>

<div class="card mt-4">
    <div class="card-header">
        <h4 class="text-center">Detalhes da Instituição</h4>
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-2 font-weight-bold">
                Instituição:
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2 font-weight-bold">
                Descrição:
            </dt>
            <dd class="col-sm-10">
                @Html.TextAreaFor(model => model.Description, new { @class = "form-control", @readonly = "readonly" })
            </dd>
            <dt class="col-sm-2 font-weight-bold">
                Imagem:
            </dt>
            <dd class="col-sm-10">
                @if (!string.IsNullOrEmpty(Model.Image))
                {
                    <img src="@Model.Image" class="img-fluid img-thumbnail" alt="Imagem da Instituição" />
                }
                else
                {
                    <span>Nenhuma imagem disponível</span>
                }
            </dd>
        </dl>
    </div>
    <div class="card-footer text-center">
        <form asp-action="Delete" class="d-inline">
            <input type="hidden" asp-for="Id" />
            <button type="submit" class="btn btn-danger">
                <i class="fas fa-trash-alt"></i> Deletar
            </button>
        </form>
       @*  <a asp-action="Index" class="btn btn-secondary ml-2">
            <i class="fas fa-arrow-left"></i> Voltar
        </a> *@
    </div>
</div>

<br />
<a asp-action="Index" class="btn btn-primary">Voltar</a>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js" crossorigin="anonymous"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
