@using NinaSpeakV2.Domain.ViewModels.UsersInstitutions
@model ReadUserInstitutionViewModel

@{
    ViewData["Title"] = "Delete";
}

<h1>Deletar</h1>

<div>
    <h4>Usuário Instituição</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UserEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UserEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.InstitutionName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.InstitutionName)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Deletar" class="btn btn-danger" /> |
        <a asp-controller="UserInstitution" asp-action="Details" asp-route-id="@Model.Id">Voltar</a>
    </form>
</div>
