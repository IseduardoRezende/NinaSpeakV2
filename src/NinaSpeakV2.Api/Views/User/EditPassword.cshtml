@using NinaSpeakV2.Api.Utils
@using NinaSpeakV2.Domain.Models
@using NinaSpeakV2.Domain.ViewModels.Users
@model UpdateUserPasswordViewModel

@{
    ViewData["Title"] = "Edit Password";
}

<h1 class="text-center my-4">Editar Senha <i class="fa fa-lock"></i></h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Informações da Conta</h4>
                </div>
                <div class="card-body">
                    @Html.Partial(Constant.PartialViewNameBaseErrors, ViewData[Constant.ViewDataBaseErrors] as IEnumerable<BaseError>)
                    <form asp-action="EditPassword">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>                        
                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Senha Atual</label>
                            <input type="password" asp-for="Password" class="form-control" placeholder="Digite sua senha atual" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="NewPassword" class="control-label">Nova Senha</label>
                            <input type="password" asp-for="NewPassword" class="form-control" placeholder="Digite sua nova senha" />
                            <span asp-validation-for="NewPassword" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmNewPassword" class="control-label">Confirmar Nova Senha</label>
                            <input type="password" asp-for="ConfirmNewPassword" class="form-control" placeholder="Confirme sua nova senha" />
                            <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group text-center">
                            <input type="submit" value="Atualizar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <div>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn-link">Voltar</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
