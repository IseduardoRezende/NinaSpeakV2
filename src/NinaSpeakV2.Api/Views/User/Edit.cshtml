@using NinaSpeakV2.Api.Utils
@using NinaSpeakV2.Domain.Models
@using NinaSpeakV2.Domain.ViewModels.Users
@model UpdateUserViewModel

@{
    ViewData["Title"] = "Edit";
}

<h1 class="text-center my-4">Editar Email <i class="fas fa-envelope"></i></h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">            
            <div class="card">
                <div class="card-header">
                    <h4 class="mb-0">Informações da Conta</h4>
                </div>
                <div class="card-body">
                    @Html.Partial(Constant.PartialViewNameBaseErrors, ViewData[Constant.ViewDataBaseErrors] as IEnumerable<BaseError>)
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">Email Atual</label>
                            <input type="email" asp-for="Email" value="@Model.Email" class="form-control" readonly="readonly" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>    
                        <div class="form-group">
                            <label asp-for="NewEmail" class="control-label">Novo Email</label>
                            <input type="email" asp-for="NewEmail" class="form-control"  placeholder="Digite seu novo email"/>
                            <span asp-validation-for="NewEmail" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="ConfirmNewEmail" class="control-label">Confirmar Novo Email</label>
                            <input type="email" asp-for="ConfirmNewEmail" class="form-control" placeholder="Confirme seu novo email" />
                            <span asp-validation-for="ConfirmNewEmail" class="text-danger"></span>
                        </div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group text-center">
                            <input type="submit" value="Atualizar" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
            <div>
                <a asp-action="Details" asp-route-id="@Model.Id" class="btn-link">Voltar</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
